@model WebProje.Models.YurtFoto
@{
    ViewData["Title"] = "Add Foto";
}


<h1>Fotoğraf Ekle</h1>

<h4>Yurt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddFoto" method="POST">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="YurtID" class="form-control" type="text" placeholder="" readonly style="background-color: transparent;"/>
                <label asp-for="YurtID" class="control-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="FotoDir" class="form-control" placeholder="" />
                <label asp-for="FotoDir" class="control-label"></label>
                <span asp-validation-for="FotoDir" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
