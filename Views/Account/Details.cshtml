@model IEnumerable<WebProje.Models.User>

@{
    ViewData["Title"] = "Details";
}

<h1>Kullanıcı Bilgileri</h1>

<div>
    <hr />
    <dl class="row">
        
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FName)
            </dt>
            <dd class="col-sm-10">
                @ViewBag.user.FName
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LName)
            </dt>
            <dd class="col-sm-10">
                @ViewBag.user.LName
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @ViewBag.user.Email
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>
            <dd class="col-sm-10">
                @ViewBag.user.PhoneNumber
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Gender)
            </dt>
            <dd class="col-sm-10">
                @{if (ViewBag.user.Gender =='M')
                {
                    <span>Erkek</span>
                }  
                else if (ViewBag.user.Gender == 'F')
                {
                    <span>Kadın</span>
                }}
            </dd>
    </dl>
</div>